# ========================================
# COMMISSI - Environment Configuration
# ========================================

# Required: NextAuth Secret (min 32 characters)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# Required: Database URL (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=

# Required: Encryption Key (64 hex characters for AES-256-GCM)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Optional: Demo Mode (set to 'true' to enable demo mode without database)
NEXT_PUBLIC_DEMO_MODE=false

# ========================================
# Optional: Webhooks
# ========================================
WEBHOOK_URL=
WEBHOOK_SECRET=

# ========================================
# Optional: Redis (for rate limiting)
# Get free tier at https://upstash.com
# ========================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ========================================
# Optional: Google Calendar Integration
# ========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# ========================================
# Optional: Email (SMTP)
# ========================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ========================================
# Optional: Seed Configuration (Development only)
# ========================================
SEED_SECRET=
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_USER_NAME=
TEST_USER_ROLE=
